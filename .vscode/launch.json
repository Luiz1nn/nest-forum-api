  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nest.js",
      "args": ["${workspaceFolder}/src/infra/main.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register", "-r" ,"tsconfig-paths/register"],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
    }
  ]
}